# Advanced Agent System Environment Configuration
# Copy this file to .env and update with your actual values

# ================================
# OpenAI Configuration
# ================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id-here
OPENAI_PROJECT=proj-your-project-id-here

# ================================
# Application Configuration
# ================================
# Environment: development, staging, production
ENVIRONMENT=development

# Application settings
APP_NAME=Advanced Agent System
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# Database Configuration
# ================================
# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/advance_agent_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=advance_agent_db
DATABASE_USER=advance_agent_user
DATABASE_PASSWORD=secure_password_here
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ================================
# Redis Configuration
# ================================
# Redis for caching and session management
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_EXPIRE_TIME=3600

# ================================
# External API Keys
# ================================
# Weather API (for weather tool)
WEATHER_API_KEY=your-weather-api-key-here

# Web Search API (for search tool)
SEARCH_API_KEY=your-search-api-key-here
SEARCH_ENGINE_ID=your-search-engine-id-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_USE_TLS=true

# ================================
# Monitoring & Observability
# ================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# DataDog for monitoring
DATADOG_API_KEY=your-datadog-api-key-here
DATADOG_APP_KEY=your-datadog-app-key-here

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000

# ================================
# Rate Limiting & Security
# ================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Security headers
SECURITY_HEADERS_ENABLED=true

# ================================
# Agent Configuration
# ================================
# Default agent settings
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096
DEFAULT_TIMEOUT=300

# Tool settings
TOOLS_ENABLED=true
FILE_OPERATIONS_ENABLED=false
DANGEROUS_TOOLS_ENABLED=false

# Guardrails
GUARDRAILS_ENABLED=true
CONTENT_FILTER_ENABLED=true
PII_DETECTION_ENABLED=true
PROFANITY_FILTER_ENABLED=true

# ================================
# File Storage
# ================================
# Local file storage
FILE_STORAGE_PATH=./data/files
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=txt,pdf,docx,xlsx,csv,json

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1
S3_BUCKET_NAME=advance-agent-files

# ================================
# Workflow Configuration
# ================================
# Workflow engine settings
WORKFLOW_ENABLED=true
MAX_CONCURRENT_WORKFLOWS=10
WORKFLOW_TIMEOUT=1800
WORKFLOW_RETRY_ATTEMPTS=3

# ================================
# Development & Testing
# ================================
# Development settings
DEV_MODE=true
MOCK_EXTERNAL_APIS=false
ENABLE_PROFILING=false

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_advance_agent_db
TEST_REDIS_URL=redis://localhost:6379/1

# ================================
# Backup & Recovery
# ================================
# Database backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# ================================
# Performance Tuning
# ================================
# Connection pools
HTTP_POOL_CONNECTIONS=10
HTTP_POOL_MAXSIZE=20
HTTP_RETRIES=3

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ================================
# Compliance & Audit
# ================================
# Audit logging
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=90

# Data retention
DATA_RETENTION_DAYS=365
CONVERSATION_RETENTION_DAYS=90

# Privacy
GDPR_COMPLIANCE=true
DATA_ANONYMIZATION=true

# ================================
# Feature Flags
# ================================
# Enable/disable features
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_AGENT_WORKFLOWS=true
FEATURE_VOICE_INTEGRATION=false
FEATURE_IMAGE_GENERATION=true
FEATURE_CODE_EXECUTION=false

# ================================
# Third-Party Integrations
# ================================
# Slack integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# Microsoft Teams
TEAMS_APP_ID=your-teams-app-id-here
TEAMS_APP_PASSWORD=your-teams-app-password-here

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# ================================
# Notification Configuration
# ================================
# Email notifications
EMAIL_NOTIFICATIONS_ENABLED=true
ADMIN_EMAIL=admin@yourcompany.com

# SMS notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# Push notifications
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=your-fcm-server-key-here

# ================================
# Analytics & Metrics
# ================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Custom analytics
ANALYTICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60

# ================================
# Internationalization
# ================================
# Language settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
TIMEZONE=UTC

# ================================
# Advanced Features
# ================================
# Machine Learning
ML_MODEL_PATH=./models
ML_INFERENCE_ENABLED=false

# Knowledge Base
KNOWLEDGE_BASE_ENABLED=true
VECTOR_DATABASE_URL=http://localhost:8080

# Real-time features
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8765

# ================================
# Load Balancing & Scaling
# ================================
# Load balancing
LOAD_BALANCER_ENABLED=false
WORKER_PROCESSES=4
WORKER_THREADS=2

# Auto-scaling
AUTO_SCALING_ENABLED=false
MIN_INSTANCES=1
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
